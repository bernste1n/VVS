require("lib.moonloader")
local dlstatus = require("moonloader").download_status
local inicfg = require 'inicfg'
local keys = require 'vkeys'
local imgui = require 'imgui'
local encoding = require 'encoding'
encoding.default = 'CP1251'
u8 = encoding.UTF8

update_state = false

local script_vers = 1
local script_vers_text = '1.00'

local update_url = 'https://raw.githubusercontent.com/bernste1n/VVS/master/update.ini'
local update_path = getWorkingDirectory() .. '/update.ini'

local script_url = 'https://raw.githubusercontent.com/bernste1n/VVS/master/ScriptVVS'
local script_path = thisScript().path


function main()
    if not isSampAvailable() or not isSampfuncsLoaded() then return end
    while not isSampAvailable() do wait(100) end
    
    downloadUrlToFile(update_url, update_path, function(id, status)
        if status == dlstatus.STATUS_ENDDOWNLOADDATA then
            updateIni = inicfg.load(nil, update_path)
            if tonumber(updateIni.info.vers) > script_vers then
                sampAddChatMessage('Есть обновление! Версия: ' .. updateIni.info.vers_text, -1)
                update_state = true
            end
            os.remove(update_path)
        end
    end
    
    while true do 
        wait(0) 
    if update_state then
        downloadUrlToFile(script_url, script_path, function(id, status)
            if status == dlstatus.STATUS_ENDDOWNLOADDATA then
                sampAddChatMessage('Скрипт успешно обновлён!', -1)
                thisScript():reload()
            end
        end)
        break
    end

end
